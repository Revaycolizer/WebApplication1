@page
@model WebApplication1.Pages.Admin.Students.EditModel
@{
}

<div class="row">

    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Add new Student</h2>
        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close" />
            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close" />
            </div>
        }
        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    ID
                </label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Student.Id">
                   
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Created At
                </label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Student.createdAt.ToString("MM/dd/yyyy")">

                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    First name
                </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="StudentDto.firstname">
                    <span asp-validation-for="StudentDto.firstname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Middle name
                </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="StudentDto.middlename">
                    <span asp-validation-for="StudentDto.middlename" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Last name
                </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="StudentDto.lastname">
                    <span asp-validation-for="StudentDto.lastname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Guardian
                </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="StudentDto.guardian">
                    <span asp-validation-for="StudentDto.guardian" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Phone number
                </label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="StudentDto.phoneno">
                    <span asp-validation-for="StudentDto.phoneno" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                
                <div class="col-sm-8">
                   <img src="/students/@Model.Student.img" width="150"/>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Image
                </label>
                <div class="col-sm-8">
                    <input type="file" accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" class="form-control" asp-for="StudentDto.src">
                    <span asp-validation-for="StudentDto.src" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Birth date
                </label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" asp-for="StudentDto.birthdate">
                    <span asp-validation-for="StudentDto.birthdate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>

                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Students/Index" role="button">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>